{
  // Window Behavior
  "window.title": "${dirty}${rootName}${separator}${activeEditorShort}",
  "window.dialogStyle": "custom",
  "window.restoreWindows": "folders",

  // Fonts and glyphs
  "editor.fontFamily": "FiraCode Retina Nerd Font, monospace",
  "editor.fontWeight": "500",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.cursorWidth": 2,
  "editor.cursorStyle": "line",
  "editor.lineHeight": 1.4,
  "editor.lineNumbers": "off",

  // Formatting and saving files
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  // Editor appearance and behavior
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "editor.minimap.enabled": false,
  "diffEditor.wordWrap": "off",
  "editor.wordWrap": "off",
  "editor.suggestSelection": "first",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.cursorBlinking": "phase",
  "workbench.list.smoothScrolling": true,
  "explorer.sortOrder": "type",
  "explorer.compactFolders": false,
  "window.menuBarVisibility": "toggle",
  "workbench.startupEditor": "none",
  "editor.mouseWheelZoom": false,
  "explorer.confirmDragAndDrop": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Jupyter notebooks
  "notebook.markup.fontSize": 16,

  // Files
  "workbench.editorAssociations": { "*.ipynb": "jupyter-notebook" },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.associations": {
    "**/i3/config": "i3"
  },

  // Integrated terminal
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.tabs.showActiveTerminal": "singleTerminalOrNarrow",

  // Python
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnPaste": false
  },

  "[ruby]": {
    "editor.tabSize": 4
  },

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,

  // C#
  "csharp.referencesCodeLens.enabled": false,
  "csharp.suppressDotnetInstallWarning": true,

  // Notebooks
  "jupyter.askForKernelRestart": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  // Extensions
  "svg.preview.mode": "svg",
  "react-native.packager.port": 19002,
  "react-native-tools.networkInspector.consoleLogsColorTheme": "Dark",
  "todohighlight.isEnable": true,
  "cssvar.files": ["./node_modules/open-props/open-props.min.css"],
  "cssCustomProperties.files": ["./node_modules/open-props/open-props.min.css"],
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "template-string-converter.quoteType": "single",
  "prettier.arrowParens": "avoid",
  "helium-icon-theme.saturation": 1,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "terminal.integrated.defaultProfile.linux": "fish",
  "editor.bracketPairColorization.enabled": false,
  "go.toolsManagement.autoUpdate": true,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "gitlens.showWelcomeOnInstall": false,
  "[go.sum]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go"
  },
  "telemetry.telemetryLevel": "off",
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[latex]": {
    "editor.defaultFormatter": "mathematic.vscode-latex"
  },
  "files.autoSave": "afterDelay",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  }
}
